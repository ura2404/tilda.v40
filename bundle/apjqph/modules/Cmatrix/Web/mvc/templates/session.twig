{% extends "/Cmatrix/Web/mvc/templates/commonLogin.twig" %}

{% block style %}
    {{ parent() }}
    {#<style>
        #cm-session{
            display: grid;
        }
    </style>#}
{% endblock %}

{% block main %}
    <div class="flex flex-col mt-3 bg-transparent">
        {% if isSession %}
            <div id="cm-session" class="cursor-pointer grid grid-cols-[max-content_minmax(0,1fr)] _grid-cols-2 _auto-rows-min _table-auto mx-auto">
                {% for code,value in data %}
                    <div class="{% if loop.index is odd %}bg-gray-100{% else %}bg-white{% endif %} font-bold  py-1 px-3">{{ code }}</div>
                    <div class="{% if loop.index is odd %}bg-gray-100{% else %}bg-white{% endif %} py-1 px-3 truncate" title="{{ value }}">{{ value }}</div>
                {% endfor %}
            </div>
        {% else %}
            <div class="m-auto text-4xl">
                <i class="far fa-exclamation-circle"></i>
                <span>Сессии не активны</span>
            </div>
        {% endif %}
    </div>
{% endblock %}